{
	"name": "qual-e-a-palavra",
	"description": "Aplicativo para anotação de sugestões de palavras para jogos de adivinhação",
	"version": "1.0.1",
	"license": "Apache-2.0",
	"author": "Luiz Felipe Nazari <luiz.nazari.42@gmail.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/luiznazari/queap.git"
	},
	"scripts": {
		"test": "./node_modules/.bin/mocha -r ts-node/register ./test/**/*.spec.ts --reporter=nyan",
		"test:tdd": "npm run test -- --watch --watch-extensions ts,tsx",
		"test:coverage": "./node_modules/.bin/nyc npm test",
		"build": "./node_modules/.bin/gulp build:prod",
		"server": "./node_modules/.bin/lite-server -c=./config/bs-config.json",
		"watch": "./node_modules/.bin/gulp watch",
		"prestart": "./node_modules/.bin/gulp build",
		"start": "./node_modules/.bin/concurrently \"npm run server\" \"npm run watch\"",
		"cordova:build": "./node_modules/.bin/gulp build:cordova && (cd mobile && cordova build && cd..)",
		"cordova:emulate": "(cd mobile && cordova emulate android && cd..)",
		"cordova": "./node_modules/.bin/gulp build:cordova && (cd mobile && cordova build android && cordova emulate android && cd..)"
	},
	"nyc": {
		"check-coverage": false,
		"per-file": true,
		"lines": 70,
		"statements": 70,
		"functions": 70,
		"branches": 70,
		"extension": [
			".js",
			".ts"
		],
		"include": [
			"src"
		],
		"reporter": [
			"html",
			"text"
		],
		"all": true,
		"cache": false,
		"sourceMap": false,
		"instrument": true
	},
	"dependencies": {
		"@angular/common": "^6.1.9",
		"@angular/compiler": "^6.1.9",
		"@angular/core": "^6.1.9",
		"@angular/forms": "^6.1.9",
		"@angular/http": "^6.1.9",
		"@angular/platform-browser": "^6.1.9",
		"@angular/platform-browser-dynamic": "^6.1.9",
		"@angular/router": "^6.1.9",
		"@angular/upgrade": "^6.1.9",
		"core-js": "^2.5.3",
		"jquery": "^3.3.1",
		"mdi": "^2.1.99",
		"phonon": "^1.4.9",
		"reflect-metadata": "^0.1.12",
		"rxjs": "6.3.3",
		"rxjs-compat": "^6.3.3",
		"zone.js": "^0.8.20"
	},
	"devDependencies": {
		"@types/chai": "^4.1.2",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.11.4",
		"@types/npm": "^2.0.29",
		"@types/phonon": "^1.4.2",
		"browserify": "^16.1.1",
		"chai": "^4.1.2",
		"concurrently": "^4.0.1",
		"del": "3.0.0",
		"gulp": "3.9.1",
		"gulp-autoprefixer": "^6.0.0",
		"gulp-clean-css": "3.10.0",
		"gulp-cleanhtml": "^1.0.3",
		"gulp-concat": "2.6.1",
		"gulp-if": "^2.0.2",
		"gulp-plumber": "1.2.0",
		"gulp-rename": "^1.2.2",
		"gulp-replace": "^1.0.0",
		"gulp-sass": "4.0.1",
		"gulp-sass-lint": "1.4.0",
		"gulp-sourcemaps": "2.6.4",
		"gulp-tsc": "^1.3.2",
		"gulp-tslint": "8.1.3",
		"gulp-typescript": "5.0.0-alpha.3",
		"gulp-uglify": "3.0.1",
		"lite-server": "^2.3.0",
		"mocha": "^5.0.4",
		"nyc": "^13.0.1",
		"run-sequence": "2.2.1",
		"sinon": "^6.3.5",
		"sinon-chai": "^3.0.0",
		"ts-node": "^7.0.1",
		"tsify": "^4.0.0",
		"tslint": "^5.9.1",
		"tslint-no-unused-expression-chai": "0.1.4",
		"typescript": "~3.1.1",
		"vinyl-buffer": "^1.0.1",
		"vinyl-source-stream": "^2.0.0",
		"watchify": "^3.11.0"
	}
}
